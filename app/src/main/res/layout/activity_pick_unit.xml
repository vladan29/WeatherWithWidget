<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apps.vladan.weather_widget.PickUnitActivity">

    <TextView
        android:id="@+id/unit_text"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="@string/unit_text"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/units_spinner"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/unit_text"
        android:layout_marginStart="20dp"
        android:entries="@array/units"
        android:textAlignment="center" />

    <Button
        android:id="@+id/set_unit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/units_spinner"
        android:layout_below="@+id/units_spinner"
        android:layout_marginStart="23dp"
        android:layout_marginTop="65dp"
        android:text="@string/set_unit_text" />

</RelativeLayout>
